<?xml version="1.0" encoding="UTF-8"?>

<web-app version="3.1" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
  http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns="http://xmlns.jcp.org/xml/ns/javaee">
   
   <servlet>
       <servlet-name>login</servlet-name>
       <servlet-class>com.payment.PaymentInfoServlet</servlet-class>
   </servlet>
   <servlet-mapping>
       <servlet-name>login</servlet-name>
       <url-pattern>/log</url-pattern>
   </servlet-mapping>
   
   <servlet>
       <servlet-name>insertpayment</servlet-name>
       <servlet-class>com.payment.PaymentInsert</servlet-class>     
   </servlet>
   <servlet-mapping>
       <servlet-name>insertpayment</servlet-name>
       <url-pattern>/insert</url-pattern>
   </servlet-mapping>
     
   <servlet>
       <servlet-name>updatepayment</servlet-name>
       <servlet-class>com.payment.UpdatePaymentServlet</servlet-class>     
   </servlet>
   <servlet-mapping>
       <servlet-name>updatepayment</servlet-name>
       <url-pattern>/update</url-pattern>
   </servlet-mapping>
   
   <servlet>
       <servlet-name>deletepayment</servlet-name>
       <servlet-class>com.payment.DeletePaymentServlet</servlet-class>     
   </servlet>
   <servlet-mapping>
       <servlet-name>deletepayment</servlet-name>
       <url-pattern>/delete</url-pattern>
   </servlet-mapping>  
   
</web-app>